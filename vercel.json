{
  "buildCommand": "npm run build",
  "installCommand": "npm ci",
  "outputDirectory": "dist",
  "functions": {
    "api/**": {
      "runtime": "nodejs20.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/index.js?path=api/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.js?path=/:path*"
    }
  ]
}
